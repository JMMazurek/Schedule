@model Schedule.Models.Group

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Group</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>
<p>
    @if(ViewBag.GroupAction == "Leave")
    {
        using (Html.BeginForm("LeaveGroup", "Groups", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.Hidden("id", Model.Id)
                <input type="submit" value="Leave group" class="btn btn-default" />
            </div>
        }
    }
    @if (ViewBag.GroupAction == "Request")
    {
        using (Html.BeginForm("RequestGroup", "Groups", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.Hidden("id", Model.Id)
                <input type="submit" value="Send join request" class="btn btn-default" />
            </div>
        }
    }
    @if (ViewBag.GroupAction == "Join")
    {
        using (Html.BeginForm("JoinGroup", "Groups", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.Hidden("id", Model.Id)
                <input type="submit" value="Join" class="btn btn-default" />
            </div>
        }
    }
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
